<mvc:View
        xmlns:html="http://www.w3.org/1999/xhtml"
        xmlns:core="sap.ui.core"
        xmlns:mvc="sap.ui.core.mvc" controllerName="UI5OCRTickets.controller.Products"
        displayBlock="true" xmlns="sap.m" >
    <App>
        <pages>
            <Page title="Products" showNavButton="true" navButtonPress="onNavBack">
                <content>
                    <Panel xmlns="sap.m">
                        <FlexBox width="100%" id="__box0" alignItems="Inherit" alignContent="Center" justifyContent="SpaceAround">
                            <items>
                                <Button xmlns="sap.m" text="Find headers" width="100%" class="sapUiSmallMarginTopBottom" press="onOpenHeaderDialog"/>
                            </items>
                        </FlexBox>
                    </Panel>
                    <FlexBox width="100%"  alignItems="Inherit" alignContent="Center" justifyContent="SpaceAround">
                        <items>
                            <Button  id="buttonAdd" visible="false" xmlns="sap.m" activeIcon="sap-icon://add-activity" icon="sap-icon://add-activity" text="Add product" width="100%" class="sapUiSmallMarginTopBottom" press="onAddProduct"/>
                        </items>
                    </FlexBox>
                    <Panel xmlns="sap.m">
                        <FlexBox width="100%" alignItems="Inherit" alignContent="Center" justifyContent="SpaceAround">
                            <items>
                                <Label text="List of products"> </Label>
                            </items>
                        </FlexBox>
                    </Panel>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>